header.header-container
  .header-top
    .container
      .row.align-items-center.justify-content-between
        .col-auto
          a.navbar-brand(href=path+'/')
            img.rounded(src=path+"/images/code.png" alt="Blog" width="50")
            h1.text Nodejs - Blog
        .col-auto
          ul.list-register
            if (data && data.user)
              li.item
                a#userDropdown.nav-link.text-dark.dropdown-toggle(href='#' role='button' data-bs-toggle='dropdown' aria-expanded='false')
                  | Hi, #{data.user.name}
                ul.dropdown-menu(aria-labelledby='userDropdown')
                  li
                    a.dropdown-item(href=path+'/admin')
                      i.fas.fa-tachometer-alt
                      | &nbsp;
                      | Trang admin
                  li
                    hr.dropdown-divider
                  li
                    a.dropdown-item(href=path+'/admin/post/add') 
                      i.fas.fa-plus
                      | &nbsp;
                      | Thêm post mới
                  li
                    hr.dropdown-divider
                  li
                    a.dropdown-item(href=path+'/admin/config')
                      i.fas.fa-user-cog
                      | &nbsp;
                      | Cài đặt
                  li
                    a.dropdown-item(href=path+'/user/logout')
                      i.fas.fa-sign-out-alt
                      | &nbsp;
                      | Log out
            else
              li.item
                a.link(href=path+'/register/login') Đăng nhập
              li.item
                a.link(href=path+'/register/signup') Đăng ký
            
  .header-middle
    nav.navbar.navbar-expand-lg
      .container.px-0
        button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarMain' aria-controls='navbarMain' aria-expanded='false' aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarMain.collapse.navbar-collapse
          ul.nav.me-auto.mb-2.mb-lg-0
            li.nav-item
              a.nav-link.home(aria-current='page' href=path+'/')
                i.fas.fa-home
            if (data && data.nav)
              each item in data.nav
                li.nav-item
                  a.nav-link.text-uppercase(class={active : data.title === item.slug} aria-current='page' href=path+"/category/"+item.slug)!= item.name
          
          .clearfix
            form.input-group.frm-search(method="GET" action="/search")
              input.form-control(type='text' placeholder='Search ...' name="title")
              button.input-group-text(type="submit")
                i.fas.fa-search
            
