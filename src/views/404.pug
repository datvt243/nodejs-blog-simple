block vars
  -title        = 'Nodejs - Blog | 404' 
  -description  = ''
  -keywords     = ''
  -path         = ''

doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(name="description", content=description)
    meta(name="keywords", content=keywords)
    title= title
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.0.2/css/bootstrap.min.css")
    link(rel="stylesheet", href=path+"/css/styles.css")
    // ./ Load Google Font
    script(src="https://ajax.googleapis.com/ajax/libs/webfont/1.6.26/webfont.js")
    script.
      WebFont.load({
        google: {
          families: ['Nunito:wght@300,400,700&display=swap']
        }
      });
  body
    .body-container.page-not-found
      main.main-container.pb-5.d-flex.flex-column.justify-content-center
        .container
          .row.justify-content-center
            .col-md-12.text-center
              span.display-1.d-block 404
              .mb-4.lead The page you are looking for was not found.
              a.btn.btn-link(href=path+'/') Back to Home
    script(src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.0.2/js/bootstrap.bundle.min.js")
    script(src=path+"/js/scripts.js")